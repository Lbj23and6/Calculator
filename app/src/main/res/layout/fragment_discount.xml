<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chenzhaoxuan.DiscountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/discount_tv"
            android:text="增值税" />

        <EditText
            android:id="@+id/et_addtax"
            style="@style/discount_et" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/discount_tv"
            android:text="原价" />

        <EditText
            android:id="@+id/et_price"
            style="@style/discount_et" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="120dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/discount_tv"
            android:text="折扣率" />

        <EditText
            android:id="@+id/et_discount"
            style="@style/discount_et" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/discount_tv"
            android:text="折扣价" />

        <TextView
            android:id="@+id/tv_discount"
            style="@style/discount_et"
            android:textColor="@color/purple_500"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fun_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="240dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/discount_tv"
            android:text="最终价格" />

        <TextView
            android:id="@+id/tv_final"
            style="@style/discount_et"
            android:textColor="@color/purple_500"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_7"
        style="@style/style3"
        android:text="7"
        android:tag="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fun_1" />

    <TextView
        android:id="@+id/tv_8"
        style="@style/style3"
        android:text="8"
        android:tag="8"
        app:layout_constraintStart_toEndOf="@id/tv_7"
        app:layout_constraintTop_toBottomOf="@+id/fun_1" />

    <TextView
        android:id="@+id/tv_9"
        style="@style/style3"
        android:text="9"
        android:tag="9"
        app:layout_constraintStart_toEndOf="@id/tv_8"
        app:layout_constraintTop_toBottomOf="@+id/fun_1" />

    <TextView
        android:id="@+id/tv_delete"
        style="@style/style3"
        android:text="删除"
        app:layout_constraintStart_toEndOf="@id/tv_9"
        app:layout_constraintTop_toBottomOf="@+id/fun_1" />

    <TextView
        android:id="@+id/tv_4"
        style="@style/style3"
        android:text="4"
        android:tag="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_7" />

    <TextView
        android:id="@+id/tv_5"
        style="@style/style3"
        android:text="5"
        android:tag="5"
        app:layout_constraintStart_toEndOf="@id/tv_4"
        app:layout_constraintTop_toBottomOf="@id/tv_8" />

    <TextView
        android:id="@+id/tv_6"
        style="@style/style3"
        android:text="6"
        android:tag="6"
        app:layout_constraintStart_toEndOf="@id/tv_5"
        app:layout_constraintTop_toBottomOf="@id/tv_9" />

    <TextView
        android:id="@+id/tv_up"
        style="@style/style3"
        android:text="上移"
        app:layout_constraintStart_toEndOf="@id/tv_6"
        app:layout_constraintTop_toBottomOf="@id/tv_delete" />


    <TextView
        android:id="@+id/tv_1"
        style="@style/style3"
        android:text="1"
        android:tag="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_4" />

    <TextView
        android:id="@+id/tv_2"
        style="@style/style3"
        android:text="2"
        android:tag="2"
        app:layout_constraintStart_toEndOf="@id/tv_1"
        app:layout_constraintTop_toBottomOf="@id/tv_5" />

    <TextView
        android:id="@+id/tv_3"
        style="@style/style3"
        android:text="3"
        android:tag="3"
        app:layout_constraintStart_toEndOf="@id/tv_2"
        app:layout_constraintTop_toBottomOf="@id/tv_6" />

    <TextView
        android:id="@+id/tv_down"
        style="@style/style3"
        android:text="下移"
        app:layout_constraintStart_toEndOf="@id/tv_3"
        app:layout_constraintTop_toBottomOf="@id/tv_up" />


    <TextView
        android:id="@+id/tv_0"
        style="@style/style3"
        android:text="0"
        android:tag="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_1" />

    <TextView
        android:id="@+id/tv_00"
        style="@style/style3"
        android:text="00"
        android:tag="00"
        app:layout_constraintStart_toEndOf="@id/tv_0"
        app:layout_constraintTop_toBottomOf="@id/tv_2" />

    <TextView
        android:id="@+id/tv_spot"
        style="@style/style3"
        android:text="."
        app:layout_constraintStart_toEndOf="@id/tv_00"
        app:layout_constraintTop_toBottomOf="@id/tv_3" />

    <TextView
        android:id="@+id/tv_clear"
        style="@style/style3"
        android:text="C"
        app:layout_constraintStart_toEndOf="@id/tv_spot"
        app:layout_constraintTop_toBottomOf="@id/tv_down" />
</androidx.constraintlayout.widget.ConstraintLayout>