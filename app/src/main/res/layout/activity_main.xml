<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_input"
        style="@style/style1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_reuslt"
        style="@style/style1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_input" />

    <LinearLayout
        android:id="@+id/fun_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_reuslt">

        <ImageView
            android:onClick="more"
            android:id="@+id/iv_more"
            style="@style/style2" />

        <ImageView
            android:id="@+id/iv_capital"
            style="@style/style2" />

        <ImageView style="@style/style2" />

        <ImageView
            android:id="@+id/iv_delete"
            style="@style/style2" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_clear"
        style="@style/style3"
        android:text="C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fun_1" />

    <TextView
        android:id="@+id/tv_brackets"
        style="@style/style3"
        android:text="（）"
        app:layout_constraintStart_toEndOf="@id/tv_clear"
        app:layout_constraintTop_toBottomOf="@id/fun_1" />

    <TextView
        android:id="@+id/tv_percent"
        style="@style/style3"
        android:text="%"
        app:layout_constraintStart_toEndOf="@+id/tv_brackets"
        app:layout_constraintTop_toBottomOf="@id/fun_1" />

    <TextView
        android:id="@+id/tv_division"
        style="@style/style3"
        android:text="÷"
        app:layout_constraintStart_toEndOf="@+id/tv_percent"
        app:layout_constraintTop_toBottomOf="@id/fun_1" />

    <TextView
        android:id="@+id/tv_7"
        style="@style/style3"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_clear" />

    <TextView
        android:id="@+id/tv_8"
        style="@style/style3"
        android:text="8"
        app:layout_constraintStart_toEndOf="@id/tv_clear"
        app:layout_constraintTop_toBottomOf="@id/tv_brackets" />

    <TextView
        android:id="@+id/tv_9"
        style="@style/style3"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/tv_brackets"
        app:layout_constraintTop_toBottomOf="@id/tv_percent" />

    <TextView
        android:id="@+id/tv_multiply"
        style="@style/style3"
        android:text="x"
        app:layout_constraintStart_toEndOf="@+id/tv_percent"
        app:layout_constraintTop_toBottomOf="@id/tv_division" />

    <TextView
        android:id="@+id/tv_4"
        style="@style/style3"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_7" />

    <TextView
        android:id="@+id/tv_5"
        style="@style/style3"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/tv_clear"
        app:layout_constraintTop_toBottomOf="@id/tv_7" />

    <TextView
        android:id="@+id/tv_6"
        style="@style/style3"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/tv_brackets"
        app:layout_constraintTop_toBottomOf="@id/tv_9" />

    <TextView
        android:id="@+id/tv_sub"
        style="@style/style3"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/tv_percent"
        app:layout_constraintTop_toBottomOf="@id/tv_multiply" />


    <TextView
        android:id="@+id/tv_1"
        style="@style/style3"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_4" />

    <TextView
        android:id="@+id/tv_2"
        style="@style/style3"
        android:text="2"
        app:layout_constraintStart_toEndOf="@id/tv_clear"
        app:layout_constraintTop_toBottomOf="@id/tv_5" />

    <TextView
        android:id="@+id/tv_3"
        style="@style/style3"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/tv_brackets"
        app:layout_constraintTop_toBottomOf="@id/tv_6" />

    <TextView
        android:id="@+id/tv_add"
        style="@style/style3"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/tv_percent"
        app:layout_constraintTop_toBottomOf="@id/tv_sub" />


    <TextView
        android:id="@+id/tv_0"
        style="@style/style3"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_1" />

    <TextView
        android:id="@+id/tv_00"
        style="@style/style3"
        android:text="00"
        app:layout_constraintStart_toEndOf="@id/tv_clear"
        app:layout_constraintTop_toBottomOf="@id/tv_2" />

    <TextView
        android:id="@+id/tv_spot"
        style="@style/style3"
        android:text="."
        app:layout_constraintStart_toEndOf="@+id/tv_brackets"
        app:layout_constraintTop_toBottomOf="@id/tv_3" />

    <TextView
        android:id="@+id/tv_equal"
        style="@style/style3"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/tv_percent"
        app:layout_constraintTop_toBottomOf="@id/tv_add" />
</androidx.constraintlayout.widget.ConstraintLayout>